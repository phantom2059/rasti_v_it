# Многоэтапная сборка Docker образа для AutoExam с GPU поддержкой

# Этап 1: Сборка фронтенда
FROM node:20-alpine AS frontend-builder

WORKDIR /autoexam-app

# Копируем package.json и package-lock.json
COPY package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Копируем конфигурационные файлы фронтенда
COPY index.html .
COPY vite.config.js .
COPY tailwind.config.js .
COPY postcss.config.js .
COPY src ./src

# Копируем данные и изображения (важно для работы)
COPY data ./data
COPY images ./images

# Собираем фронтенд
RUN npm run build

# Этап 2: Python окружение с ML моделями и CUDA
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04 AS python-base

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3-pip \
    build-essential \
    git \
    libgl1 \
    libsm6 \
    && rm -rf /var/lib/apt/lists/*

# Устанавливаем pip
RUN python3.11 -m pip install --upgrade pip

WORKDIR /autoexam-app

# Копируем requirements.txt
COPY requirements.txt .

# Устанавливаем PyTorch с CUDA поддержкой
RUN pip install --no-cache-dir torch torchvision --index-url https://download.pytorch.org/whl/cu118  

# Устанавливаем остальные зависимости (включая fastapi и uvicorn)
RUN pip install --no-cache-dir -r requirements.txt

# Этап 3: Финальный образ
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04

# Устанавливаем Python
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3-pip \
    libgl1 \
    libsm6 \
    && rm -rf /var/lib/apt/lists/*

RUN python3.11 -m pip install --upgrade pip

WORKDIR /autoexam-app

# Копируем ВСЕ файлы проекта (включая зависимости)
COPY --from=frontend-builder /autoexam-app/dist ./dist
COPY --from=frontend-builder /autoexam-app/data ./data
COPY --from=frontend-builder /autoexam-app/images ./images

COPY qwen_sft_exam ./qwen_sft_exam

# Копируем Python код
COPY server.py .
COPY inference.py .
COPY models.py .
COPY main.py .

# Копируем требования и устанавливаем зависимости в финальном образе
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Создаем директории для хранения
RUN mkdir -p storage/uploads storage/results

# Устанавливаем python3 как python (для совместимости)
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1

# Устанавливаем переменные окружения
ENV PYTHONUNBUFFERED=1
ENV PORT=80
ENV CUDA_VISIBLE_DEVICES=0

# Открываем порт
EXPOSE 80

# Команда запуска
CMD ["python3", "-m", "uvicorn", "server:app", "--host", "0.0.0.0", "--port", "80"]
